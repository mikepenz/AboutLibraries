<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mikepenz.aboutlibraries.sample">

    <application
        android:name=".CustomApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name="com.mikepenz.aboutlibraries.sample.FragmentActivity"
            android:label="@string/app_name"
            android:theme="@style/AboutLibrariesSampleTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mikepenz.aboutlibraries.sample.CustomActivity"
            android:label="@string/app_name"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar" />
        <activity
            android:name="com.mikepenz.aboutlibraries.sample.ExtendActivity"
            android:label="@string/app_name"
            android:theme="@style/AboutLibrariesTheme" />
        <activity
            android:name="com.mikepenz.aboutlibraries.sample.CustomSortActivity"
            android:label="@string/app_name"
            android:theme="@style/AboutLibrariesTheme" />
    </application>

</manifest>
